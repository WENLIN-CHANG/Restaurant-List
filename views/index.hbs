<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search" method="GET">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" value="{{keyword}}">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    {{#each restaurantsInRows}}
    <div class="row mb-3">
      {{#each this}}
        <div class="col-md-4">
          <a href="/restaurant/{{this.id}}" class="text-decoration-none">
            <div class="card h-100">
              <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
              <div class="card-body">
                <h5 class="card-title text-dark">{{this.name}}</h5>
                <p class="card-text text-muted">{{this.category}}</p>
              </div>
            </div>
          </a>
        </div>
      {{/each}}
    </div>
    {{/each}}
  </div>
</div>